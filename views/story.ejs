<body>
    <!-- full width container for bg image -->
    <section class="container-fluid vh-100 m-0 p-0">
        ​
        <!-- regular container for content -->
        <div class="container vh-100">
            ​
            <!-- title column -->
            <div class="row text-center">
                <div class="col-12 ms-auto">
                    <h1>
                        <%= story.title %>
                    </h1>
                    <h2>
                        <!-- <%= story.actionCode %> -->
                    </h2>
                </div>
            </div>
            ​
            <!-- text column-->
            <div class="row align-items-center">
                <div class="col-lg-6 col-sm-12 offset-lg-3 mb-3">
                    <p>
                        <%= story.segment1 %>
                    </p>
                    <p>
                        <%= story.segment2 %>
                    </p>
                    <p>
                        <%= story.segment3 %>
                    </p>
                    <p>
                        <%= story.segment4 %>
                    </p>
                    <p>
                        <%= story.segment5 %>
                    </p>
                </div>
            </div>
            ​
            <!-- button group column -->
            <div class="row text-center">
                <div class="col-12">
                    <div class="btn-group form-group" role="group" aria-label="button group">
                        <form role="form" action="/<%=story.actionA%>" method="GET">
                            <button type="submit" id="optionA" class="btn">
                                <%= story.optionA %>
                            </button>
                        </form>
                        <% if(story.optionB){ %>
                            <form role="form" action="/<%=story.actionB%>" method="GET">
                                <button type="submit" id="optionB" class="btn">
                                    <%= story.optionB %>
                                </button>
                            </form>
                            <% } %>
                                <% if(story.optionC){ %>
                                    <form role="form" action="/<%=story.actionC%>" method="GET">
                                        <button type="submit" id="optionC" class="btn">
                                            <%= story.optionC %>
                                        </button>
                                    </form>
                                    <% } %>
                    </div>
                </div>
            </div>
            ​
        </div>
        ​
    </section>








